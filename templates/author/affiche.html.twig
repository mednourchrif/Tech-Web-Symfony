<h1>Liste des auteurs</h1>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    {% for author in author %}
    <tr>
        <td>{{ author.id }}</td>
        <td>{{ author.username }}</td>
        <td>{{ author.email }}</td>
        <td>
            <a href="{{ path('author_edit', {'id': author.id}) }}">Edit</a>
            <a href="{{ path('author_delete', {'id': author.id}) }}">Delete</a>
        </td>
    </tr>
    {% endfor %}
</table>